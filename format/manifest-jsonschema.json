{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/semyonsinchenko/safetensors-spark/manifest.schema.json",
  "title": "safetensors-spark Dataset Manifest",
  "description": "JSON Schema for dataset_manifest.json written by the safetensors-spark connector",
  "type": "object",
  "required": [
    "format_version",
    "safetensors_version",
    "total_samples",
    "total_bytes",
    "shards"
  ],
  "properties": {
    "format_version": {
      "type": "string",
      "const": "1.0",
      "description": "Manifest format version. Currently always '1.0'."
    },
    "safetensors_version": {
      "type": "string",
      "const": "1.0",
      "description": "Safetensors format version compatibility. Currently always '1.0'."
    },
    "total_samples": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of tensor samples across all shards."
    },
    "total_bytes": {
      "type": "integer",
      "minimum": 0,
      "description": "Total bytes of all safetensors shard files."
    },
    "shards": {
      "type": "array",
      "minItems": 1,
      "description": "List of shard files in this dataset.",
      "items": {
        "$ref": "#/$defs/shard_info"
      }
    },
    "schema": {
      "type": "object",
      "description": "Schema information for each tensor key in the dataset.",
      "additionalProperties": {
        "$ref": "#/$defs/tensor_schema_info"
      }
    }
  },
  "$defs": {
    "shard_info": {
      "type": "object",
      "required": ["shard_path", "samples_count", "bytes"],
      "properties": {
        "shard_path": {
          "type": "string",
          "pattern": "\\.safetensors$",
          "description": "Filename of the shard file."
        },
        "samples_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tensor samples in this shard."
        },
        "bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Size of the shard file in bytes."
        }
      }
    },
    "tensor_schema_info": {
      "type": "object",
      "required": ["dtype", "shape"],
      "properties": {
        "dtype": {
          "type": "string",
          "pattern": "^(F16|F32|F64|BF16|U8|I8|U16|I16|U32|I32|U64|I64)$",
          "description": "Tensor data type."
        },
        "shape": {
          "type": "array",
          "items": {"type": "integer", "minimum": 0},
          "description": "Tensor shape (dimensions)."
        }
      }
    }
  }
}